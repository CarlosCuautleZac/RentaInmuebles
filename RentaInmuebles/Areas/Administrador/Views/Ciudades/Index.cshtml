@model IEnumerable<RentaInmuebles.Models.Ciudad>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="contenedor-admin">


    <div class="edicion">
        <a href="~/Administrador/ciudades/Agregar" class="no-estilo-enlace">

            <div class="contenido-anuncio imagen-a">
                <img src="~/img/addlocation.png" />
                <div class="centrar-texto">
                    <h2 class="no-estilo-enlace">Añadir Ciudad</h2>
                </div>
            </div>

        </a>


    </div>


    @foreach (var c in Model)
    {


        <div class="edicion">
            <a href="~/administrador/ciudades/index" class="no-estilo-enlace">

                <div class="contenido-anuncio imagen-a">
                    <img src="https://cdn.icon-icons.com/icons2/1369/PNG/512/-place_90615.png" />
                    <div class="centrar-texto">
                        <h2 class="no-estilo-enlace">@c.Nombre</h2>
                    </div>
                </div>

            </a>

            <div class="botones">
                <a class="no-estilo-enlace boton boton-amarillo" href="~/Administrador/ciudades/Editar/@c.Id">Editar</a>
                <a class="no-estilo-enlace boton boton-rojo" href="~/Administrador/ciudades/Eliminar/@c.Id">Eliminar</a>
            </div>
        </div>

    }




</div>

